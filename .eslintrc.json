{
	"parser": "@typescript-eslint/parser",
	"extends": ["plugin:@typescript-eslint/recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		//"linebreak-style": ["error", "windows"],
		"quotes": [0],
		"semi": ["error", "always"],
		"eqeqeq": "error",
		"no-empty-function": "warn",
		"no-console": "off" //warm
	}
}
